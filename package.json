{
	"name": "@ridleydeveloper/ui",
	"description": "Ridley UI Component Library with Bootstrap and ReactStrap integration",
	"version": "1.0.8",
	"author": "RidleyDeveloper",
	"license": "MIT",
	"keywords": [
		"react",
		"ui",
		"components",
		"bootstrap",
		"reactstrap",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ridleydeveloper/RidleyUI.git"
	},
	"packageManager": "npm@10",
	"scripts": {
		"dev": "concurrently \"npm run build -- --watch\" \"npm run storybook\" \"npm run test\"",
		"build": "tsup",
		"build:css": "mkdir -p dist/styles && mkdir -p dist/fonts && postcss src/styles/ridley.css -o dist/styles/ridley.css && cp src/styles/fonts/Geist-VariableFont.ttf dist/fonts/",
		"build:all": "npm run build && npm run build:css",
		"lint": "biome check --write --unsafe .",
		"lint:ci": "biome check --unsafe .",
		"test": "vitest",
		"test:ci": "vitest run --coverage",
		"typecheck": "tsc --noEmit",
		"commit": "cz",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"release": "npm run build:all && npm run release-it",
		"release-it": "release-it",
		"link:self": "npm link",
		"prepare": "lefthook install",
		"prepublishOnly": "npm run build:all"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		},
		"./styles.css": "./dist/styles/ridley.css"
	},
	"files": ["dist"],
	"sideEffects": ["dist/styles/ridley.css"],
	"config": {
		"commitizen": {
			"path": "./node_modules/@ryansonshine/cz-conventional-changelog"
		}
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): v${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		}
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"overrides": {
		"micromatch": "^4.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@popperjs/core": "^2.11.0",
		"@ridleydeveloper/types": "1.0.78",
		"@ryansonshine/commitizen": "4.2.8",
		"@ryansonshine/cz-conventional-changelog": "3.3.4",
		"@storybook/addon-essentials": "8.6.8",
		"@storybook/addon-interactions": "8.6.8",
		"@storybook/addon-links": "8.6.8",
		"@storybook/addon-webpack5-compiler-swc": "3.0.0",
		"@storybook/blocks": "8.6.8",
		"@storybook/react": "8.6.8",
		"@storybook/react-webpack5": "8.6.8",
		"@storybook/test": "8.6.8",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "16.2.0",
		"@types/bootstrap": "^5.2.10",
		"@types/node": "22.13.11",
		"@types/react": "18.3.13",
		"@types/react-dom": "18.3.1",
		"@types/react-test-renderer": "18.3.0",
		"@vitest/coverage-v8": "3.0.9",
		"bootstrap": "^5.3.0",
		"concurrently": "9.1.2",
		"dotenv": "^16.4.7",
		"jsdom": "26.0.0",
		"lefthook": "1.11.3",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-import": "^16.1.1",
		"prop-types": "15.8.1",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-test-renderer": "18.3.1",
		"reactstrap": "^9.2.0",
		"release-it": "18.1.2",
		"storybook": "8.6.8",
		"ts-node": "10.9.2",
		"tsconfig-paths": "4.2.0",
		"tsup": "8.4.0",
		"tsx": "4.19.3",
		"typescript": "5.8.2",
		"vitest": "3.0.9"
	},
	"peerDependencies": {
		"@popperjs/core": "^2.11.0",
		"bootstrap": "^5.3.0",
		"react": ">=18",
		"react-dom": ">=18",
		"reactstrap": "^9.2.0"
	},
	"dependencies": {
		"clsx": "^2.1.1"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
