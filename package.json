{
  "name": "@ridleydeveloper/ridleyui",
  "description": "Ridley UI component library (private)",
  "version": "0.1.0",
  "author": "RidleyDeveloper",
  "license": "UNLICENSED",
  "keywords": ["react", "ui", "design-system", "shadcn", "typescript"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RidleyDeveloper/RidleyUI.git"
  },
  "homepage": "https://github.com/RidleyDeveloper/RidleyUI#readme",
  "bugs": { "url": "https://github.com/RidleyDeveloper/RidleyUI/issues" },

  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": ["dist"],
  "sideEffects": ["dist/styles.css"],

  "scripts": {
    "dev": "concurrently \"pnpm build --watch\" \"pnpm storybook\" \"pnpm test\"",
    "build": "tsup",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o dist/styles.css --minify",
    "build:all": "pnpm build && pnpm build:css",
    "lint": "biome check --write --unsafe .",
    "lint:ci": "biome check --unsafe .",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "commit": "cz",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "release": "pnpm build:all && pnpm release-it",
    "publish:gh": "npm publish --registry=https://npm.pkg.github.com --access=restricted",
    "link:self": "pnpm link --global",
    "prepare": "lefthook install"
  },

  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },

  "release-it": {
    "git": { "commitMessage": "chore(release): v${version}" },
    "github": { "release": true },
    "npm": { "publish": false }
  },

  "engines": { "node": ">=18.0.0" },

  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@ryansonshine/commitizen": "4.2.8",
    "@ryansonshine/cz-conventional-changelog": "3.3.4",
    "@storybook/addon-essentials": "8.6.8",
    "@storybook/addon-interactions": "8.6.8",
    "@storybook/addon-links": "8.6.8",
    "@storybook/addon-webpack5-compiler-swc": "3.0.0",
    "@storybook/blocks": "8.6.8",
    "@storybook/react": "8.6.8",
    "@storybook/react-webpack5": "8.6.8",
    "@storybook/test": "8.6.8",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@types/node": "22.13.11",
    "@types/react": "18.3.13",
    "@types/react-dom": "18.3.1",
    "@types/react-test-renderer": "18.3.0",
    "@vitest/coverage-v8": "3.0.9",
    "concurrently": "9.1.2",
    "dotenv": "^16.4.7",
    "jsdom": "26.0.0",
    "lefthook": "1.11.3",
    "prop-types": "15.8.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-test-renderer": "18.3.1",
    "release-it": "18.1.2",
    "storybook": "8.6.8",
    "tailwindcss": "4.0.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },

  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },

  "pnpm": {
    "overrides": { "micromatch@<4.0.8": ">=4.0.8" },
    "onlyBuiltDependencies": ["@biomejs/biome", "@swc/core", "esbuild", "lefthook"]
  }
}
